<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/xlist_back"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@drawable/bg1"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:src="@drawable/door" />

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/mac_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="Mac:"
            android:textColor="#6d6d72"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/map_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="13dp"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/mac_txt"
            android:layout_toRightOf="@+id/mac_txt"
            android:text="public void onAttach"
            android:textColor="#6d6d72"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/btn_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:src="@drawable/btnarrow" />

    </android.support.percent.PercentRelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/write_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/name_txt"
            android:maxLines="1"
            android:text="大门就是一个大门"
            android:textColor="#414358"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/name_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:maxLines="1"
            android:text="名称:"
            android:textColor="#6d6d72"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/baizi_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="门禁"
            android:textColor="#414358"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/lei_bie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/baizi_txt"
            android:text="类型:"
            android:layout_marginRight="5dp"
            android:textColor="#6d6d72"
            android:textSize="12sp" />
    </android.support.percent.PercentRelativeLayout>
</LinearLayout>