<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#E3E3E3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_device_detail"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:fitsSystemWindows="true"
        app:navigationIcon="@drawable/back"
        app:title=" ">

        <TextView
            android:id="@+id/toolbar_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:text="设备详细信息"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备Mac"
        android:textColor="#6d6d72"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="13dp"
        android:textSize="12sp"/>
       <TextView
           android:layout_width="match_parent"
           android:layout_height="44dp"
           android:id="@+id/device_mac"
           android:text="ksdjfhkjshdkfjh"
           android:textSize="14sp"
           android:background="#FFFFFF"
          android:paddingLeft="15dp"
           android:textColor="#414358"
           android:gravity="center_vertical"
           android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备名称"
        android:textColor="#6d6d72"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="13dp"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/rel_chag_name"
        android:background="#FFFFFF"
        android:layout_height="44dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="大门就是一个传说"
            android:id="@+id/device_name1"
            android:textSize="14sp"
            android:textColor="#414358"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="14dp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="11dp"
            android:clickable="true"
            android:id="@+id/cha_device_name"
            android:layout_alignParentTop="true"
            android:src="@drawable/arrow"/>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备类型"
        android:textColor="#6d6d72"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="13dp"
        android:textSize="12sp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#FFFFFF"
        android:layout_height="44dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:text="门禁"
            android:id="@+id/device_type"
            android:textSize="14sp"
            android:textColor="#414358"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="14dp"
            />
    </RelativeLayout>
    <android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button android:layout_width="0dp"
            android:layout_marginTop="121sp"
            android:background="#333"
            android:id="@+id/btn_shou"
            android:text="保存"
            android:textSize="13sp"
            android:layout_marginLeft="60dp"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            app:layout_widthPercent="30%"/>
        <Button android:layout_width="0dp"
            android:layout_marginTop="121sp"
            android:background="#333"
            android:id="@+id/btn_send"
            android:text="上传"
            android:layout_marginLeft="40dp"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/btn_shou"
            android:textColor="#fff"
        android:layout_height="wrap_content"
            app:layout_widthPercent="30%"/>
    </android.support.percent.PercentRelativeLayout>

</LinearLayout>