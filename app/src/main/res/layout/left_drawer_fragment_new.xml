<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#E3E3E3"
    android:layout_height="match_parent">
    <View
        android:layout_width="match_parent"
        android:layout_height="40dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:src="@drawable/header"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="郑波"
            android:id="@+id/user_name"
            android:layout_marginLeft="19dp"
            android:layout_gravity="bottom"
            android:textColor="#333"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="78dp"></View>

    <RelativeLayout
        android:id="@+id/device_worker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_she"
            android:layout_marginLeft="36dp"
            android:src="@drawable/adjust"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备调试"
            android:layout_toRightOf="@+id/item_she"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/left_drawer_item"
            android:layout_marginLeft="31dp"/>
    </RelativeLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="42dp"></View>
    <RelativeLayout
        android:id="@+id/device_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_manager"
            android:layout_marginLeft="36dp"
            android:src="@drawable/device"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备管理"
            android:layout_toRightOf="@+id/item_manager"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/left_drawer_item"
            android:layout_marginLeft="31dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="42dp"></View>
    <RelativeLayout
        android:id="@+id/device_set"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_set"
            android:layout_marginLeft="36dp"
            android:src="@drawable/settings"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置"
            android:layout_toRightOf="@+id/item_set"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/left_drawer_item"
            android:layout_marginLeft="31dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="42dp"></View>
    <RelativeLayout
        android:id="@+id/device_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_message"
            android:layout_marginLeft="36dp"
            android:src="@drawable/message"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息"
            android:layout_toRightOf="@+id/item_message"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/left_drawer_item"
            android:layout_marginLeft="31dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="42dp"></View>
    <RelativeLayout
        android:id="@+id/device_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_about"
            android:layout_marginLeft="36dp"
            android:src="@drawable/about"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关于"
            android:layout_toRightOf="@+id/item_about"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/left_drawer_item"
            android:layout_marginLeft="31dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="42dp"></View>
    <RelativeLayout
        android:id="@+id/device_quit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_quit"
            android:layout_marginLeft="36dp"
            android:src="@drawable/quit"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出"
            android:layout_toRightOf="@+id/item_quit"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/left_drawer_item"
            android:layout_marginLeft="31dp"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="38dp"></View>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="23dp"
        android:textSize="10sp"
        android:textColor="#333"
        android:text="@string/banquan"
        />
</LinearLayout>