<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#E3E3E3"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_device_name_chag"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#333333"
        android:fitsSystemWindows="true"
        app:navigationIcon="@drawable/back"
        app:title=" ">

        <TextView
            android:id="@+id/toolbar_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:text="设备名称"
            android:textColor="#FFF"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="18sp" />
    </android.support.v7.widget.Toolbar>
    <View
        android:layout_width="match_parent"
        android:layout_height="95dp"></View>

    <android.support.percent.PercentRelativeLayout
        android:layout_marginTop="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText  android:layout_width="0dp"
            app:layout_widthPercent="80%"
            android:layout_marginLeft="31dp"
            android:id="@+id/edt_device_name_chag"
            android:textColor="#5b5b5b"
            android:textSize="12sp"
            android:maxLength="10"
            android:hint="请输入自定义设备名称"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@null"
            android:layout_height="30dp"/>
        <ImageView  android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="31dp"
            app:layout_widthPercent="80%"
            android:src="@drawable/orange_device_name_edit"
            android:layout_below="@+id/edt_device_name_chag"/>
    </android.support.percent.PercentRelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(注: 最多10个汉字)"
        android:textSize="10sp"
        android:textColor="#5b5b5b"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="9dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="56dp"></View>
  <android.support.percent.PercentRelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <Button android:layout_width="0dp"
          app:layout_widthPercent="70%"
          android:layout_height="31dp"
          android:text="确定"
          android:id="@+id/btn_device_name"
          android:textSize="13dp"
          android:textColor="#fff"
          android:background="#333"
          android:layout_centerHorizontal="true"
          />
  </android.support.percent.PercentRelativeLayout>
</LinearLayout>